<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/guideProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@color/colorAccent"
        android:scaleType="fitXY"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/guideProfile"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/guideName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Guide Surname"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/guideLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Language Proficiency"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/guideContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Language Proficiency"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/guidePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Language Proficiency"
            android:textSize="16sp"
            />

    </LinearLayout>




</RelativeLayout>